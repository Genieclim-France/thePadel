    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-fill-color: transparent;
    filter: drop-shadow(0 2px 6px rgba(18, 239, 151, 0.18));
    transition:
      background 0.3s,
      filter 0.3s;
  }

